generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Guild {
  guildID String @id

  activityType ActivityTextType @default(Playing)
  activityName String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum ActivityTextType {
  Playing
  Streaming
  Listening
  Watching
  Competing
}

model User {
  discordID  String @id
  discordTag String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
